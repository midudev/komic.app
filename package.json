{
	"name": "comic-bubble",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "parcel src/index.html",
		"build": "parcel build",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"dependencies": {
		"downloadjs": "1.4.7",
		"file-drop-element": "0.2.0",
		"html-to-image": "0.1.1",
		"preact": "10.3.1"
	},
	"author": "Miguel Ángel Durán García - @midudev",
	"license": "ISC",
	"devDependencies": {
		"babel-eslint": "10.0.3",
		"eslint": "6.8.0",
		"eslint-config-prettier": "6.10.0",
		"eslint-config-standard": "14.1.0",
		"eslint-config-standard-react": "9.2.0",
		"eslint-plugin-import": "2.20.1",
		"eslint-plugin-node": "11.0.0",
		"eslint-plugin-prettier": "3.1.2",
		"eslint-plugin-promise": "4.2.1",
		"eslint-plugin-react": "7.18.3",
		"eslint-plugin-standard": "4.0.1",
		"parcel-bundler": "1.12.4"
	},
	"eslintConfig": {
		"extends": [
			"standard",
			"standard-react",
			"prettier"
		],
		"parser": "babel-eslint",
		"env": {
			"browser": true,
			"node": true,
			"es6": true
		},
		"plugins": [
			"react",
			"prettier"
		],
		"settings": {
			"react": {
				"pragma": "h",
				"version": "preact"
			}
		},
		"parserOptions": {
			"ecmaVersion": 2018,
			"ecmaFeatures": {
				"jsx": true
			}
		},
		"rules": {
			"no-console": 1,
			"no-empty": 0,
			"semi": [
				"error",
				"never"
			],
			"keyword-spacing": 2,
			"react/prop-types": 0,
			"react/no-string-refs": 2,
			"react/no-find-dom-node": 2,
			"react/no-is-mounted": 2,
			"react/jsx-no-comment-textnodes": 2,
			"react/jsx-curly-spacing": 2,
			"react/jsx-no-undef": 2,
			"react/jsx-uses-react": 2,
			"react/jsx-uses-vars": 2
		}
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 2,
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"endOfLine": "lf"
	}
}
